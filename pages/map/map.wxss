/* pages/map/map.wxss */
page,.map-content{
  width: 100%;
  height: 100%;
  position: relative
}
.flex{
  display: flex;
  align-items: center;
  justify-content: center;
}
.YourPoint{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  bottom:10rpx;
  left:10rpx;
}
.enableTraffic{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top:140rpx;
  right:20rpx;
}
.bgCfff{
  background-color: transparent;
}
.search{
  width: 70%;
  line-height: 80rpx;
  margin:10rpx 0;
  border-radius: 10rpx;
  color: gray;
  background-color: #fff;
  /* text-indent:20rpx; */
  padding-left:20rpx;
  box-shadow:5rpx 5rpx 3rpx rgba(0, 0, 0, 0.3)
}
.headimg{
  width: 50rpx;
  height: 80rpx;
  position: absolute;
  border-radius: 100%;
  top:50%;
  left:50%;
  margin-left:-25rpx;
  margin-top:-78rpx;
}
.centerLocation{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  /* background: radial-gradient(#fff 0.01%, #D02A40 99.99%); */
   background: #D02A40;
  color: rgb(248, 248, 248);
  /* text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3); */
  font-size: 28rpx;
  position: absolute;
  left: 50%;
  margin-left: -100rpx;
  bottom: 30rpx;
  box-shadow: 5px 5px 3px rgba(0, 0, 0, 0.3)
}
.caramel{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom:10rpx;
  right:10rpx;
  background: #fff;
  border-radius: 10rpx
}
.carImg{
  width: 77%;
  height: 77%;
}
.bottom-button{
  position: relative
}
.button-common{
  line-height: 72rpx;
  padding: 0 28rpx;
  font-weight: 600;
  background: transparent;
  display: inline-block;
}
.sure{
  color: green;
  float: right;
}
button::after{
  border: none;
}
.locationImg{
  width: 40rpx;
  height: 40rpx;
}
.bottom-location{
  display: flex;
  align-items: center;
  padding: 2rpx 6rpx 2rpx 20rpx;
}
.locationName{
  padding-left: 10rpx; 
  font-size: 25rpx;
}
.bottom-text{
  width: 80%;
  margin-top: 20rpx;
  height: 150rpx;
  background: #ccc;
  border-radius: 10rpx;
  padding:10rpx;
}
.textInfo{
  padding: 40rpx;
  line-height: 60rpx;
  text-align: center;
}
.imgBox{
  display: flex;
}
.imgBox image{
  height: 240rpx;
  margin:20rpx 1.5%;
}
.photo{
  width:80rpx;
  height:80rpx;
  border-radius:100%;
  margin:0 10rpx;
}